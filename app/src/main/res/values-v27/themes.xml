<resources>

    <style name="Theme.Shelper" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorOnSurface">@color/primary</item>
        <item name="fontFamily">@font/notosans</item>
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Shelper.Guide" parent="Theme.Shelper">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/backgroundWhite</item>
        <item name="android:windowBackground">@color/backgroundWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.Shelper.Error" parent="Theme.Shelper">
        <item name="android:statusBarColor">@color/backgroundWhite</item>
        <item name="android:navigationBarColor">@color/backgroundWhite</item>
        <item name="android:windowBackground">@color/backgroundWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

</resources>